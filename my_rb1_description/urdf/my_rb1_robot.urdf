<?xml version="1.0" ?>

<robot name="robot">
    <!-- Gazebo plugins  -->
    <!-- Actuator driver -->
    <gazebo>
        <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
            <alwaysOn>true</alwaysOn>
            <updateRate>20</updateRate>
            <leftJoint>joint_left_wheel_link</leftJoint>
            <rightJoint>joint_right_wheel_link</rightJoint>
            <wheelSeparation>0.4</wheelSeparation>
            <wheelDiameter>0.5</wheelDiameter>
            <torque>10</torque>
            <commandTopic>cmd_vel</commandTopic>
            <odometryTopic>odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <robotBaseFrame>link_chassis</robotBaseFrame>
        </plugin>
    </gazebo>

    <!-- Laser Sensor  -->
    <gazebo reference="front_laser">
        <sensor type="ray" name="head_hokuyo_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>20</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.570796</min_angle>
                        <max_angle>1.570796</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.20</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
                <topicName>/scan</topicName>
                <frameName>sensor_laser</frameName>
            </plugin>
        </sensor>
    </gazebo>

    <!-- Gazebo colors  -->
    <gazebo reference="base_link">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="right_wheel">
        <material>Gazebo/Red</material>
        <mu1>1</mu1>
        <mu2>1</mu2>
    </gazebo>
    <gazebo reference="left_wheel">
        <material>Gazebo/Red</material>
        <mu1>1</mu1>
        <mu2>1</mu2>
    </gazebo>
    <gazebo reference="front_caster">
        <material>Gazebo/DarkGrey</material>
        <mu1>0</mu1>
        <mu2>0</mu2>
    </gazebo>
    <gazebo reference="back_caster">
        <material>Gazebo/DarkGrey</material>
        <mu1>0</mu1>
        <mu2>0</mu2>
    </gazebo>

    <link name="base_footprint"/>

    <!-- Base Link -->
    <link name="base_link">
        <inertial>
            <mass value="11"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.254" ixy="0" ixz="0" iyy="0.254" iyz="0" izz="0.343"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.25" length="0.3"/>
            </geometry>
            <material name="DarkBlue">
                <color rgba="0.2 0.2 0.4 0.4" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.25" length="0.3"/>
            </geometry>
        </collision>

    </link>
    <joint name = "joint_basefootprint_link" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 0.15" />
        <child link="base_link" />
        <parent link="base_footprint" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>


    <!-- Right Wheel  -->
    <link name="right_wheel">
        <inertial>
            <mass value="5"/>
                <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <inertia ixx="0.0046" ixy="0" ixz="0" iyy="0.00625" iyz="0" izz="0.0046"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.06"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.06"/>
            </geometry>
        </collision>
    </link>

    <joint name="joint_right_wheel_link" type="continuous">
        <origin rpy="0 0 0" xyz="0 -0.2 -0.15" />
        <child link="right_wheel" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0" />
    </joint>


    <!-- Left wheel  -->
    <link name="left_wheel">
        <inertial>
            <mass value="5"/>
                <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <inertia ixx="0.0046" ixy="0" ixz="0" iyy="0.00625" iyz="0" izz="0.0046"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.06"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.06"/>
            </geometry>
        </collision>
    </link>

    <joint name="joint_left_wheel_link" type="continuous">
        <origin rpy="0 0 0" xyz="0 0.2 -0.15" />
        <child link="left_wheel" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- front caster wheel -->
    <link name="front_caster">
        <inertial>
            <mass value="2"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0005" ixy="0.0005" ixz="0.0005" iyy="0.0005" iyz="0.0005" izz="0.0005"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0.02" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="DarkBlue">
                <color rgba="0.2 0.2 0.4 0.8" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.02" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>

        <visual>
            <origin xyz="0 0 -0.025" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="DarkBlue">
                <color rgba="0.2 0.2 0.4 0.8" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 -0.025" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision> 
    </link>

    <joint name="joint_front_caster" type="fixed">
        <origin rpy="0 0 0" xyz="0.1 0 -0.15"/>
        <child link="front_caster" />
        <parent link="base_link" />
        <joint_properties damping="0.0" friction="0.0"/>
    </joint>

    <!-- back caster wheel -->
    <link name="back_caster">
        <inertial>
            <mass value="2"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0005" ixy="0.0005" ixz="0.0005" iyy="0.0005" iyz="0.0005" izz="0.0005"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0.02" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="DarkBlue">
                <color rgba="0.2 0.2 0.4 0.8" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.02" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>

        <visual>
            <origin xyz="0 0 -0.025" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="DarkBlue">
                <color rgba="0.2 0.2 0.4 0.8" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 -0.025" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision> 
    </link>

    <joint name="joint_back_caster" type="fixed">
        <origin rpy="0 0 0" xyz="-0.1 0 -0.15"/>
        <child link="back_caster" />
        <parent link="base_link" />
        <joint_properties damping="0.0" friction="0.0"/>
    </joint>

    <!-- Front laser  -->
    <link name="front_laser">
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.1 0.1 0.1"/>
                </geometry>
            </collision>
            <inertial>
                <mass value="1e-5" />
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
            </inertial>
        </link>
        <joint name="joint_front_laser" type="fixed">
            <origin rpy="3.14 0 0" xyz="0.25 0 0.075" />
            <child link="front_laser" />
            <parent link="base_link" />
        </joint>

</robot>